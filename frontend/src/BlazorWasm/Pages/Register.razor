@page "/register"
@using BlazorWasm.Constants
@using BlazorWasm.Models
@using BlazorWasm.Services
@inject IUserApiClient UserApiClient
@inject IAuthApiClient AuthApiClient
@inject ITokenService TokenService
@inject NavigationManager NavManager
@inject AuthenticationStateProvider AuthStateProvider

<h3>Register</h3>

<div style="max-width: 400px; margin: 2rem auto; padding: 1rem; border: 1px solid #ccc; border-radius: 8px;">
    <div style="margin-bottom: 1rem;">
        <label for="email">Email</label><br />
        <input id="email" @bind="_registerRequest.Email" placeholder="Enter email" style="width: 100%; padding: 0.5rem;" />
    </div>

    <div style="margin-bottom: 1rem;">
        <label for="username">Username</label><br />
        <input id="username" @bind="_registerRequest.Username" placeholder="Enter username" style="width: 100%; padding: 0.5rem;" />
    </div>

    <div style="margin-bottom: 1rem;">
        <label for="password">Password</label><br />
        <input id="password" type="password" @bind="_registerRequest.Password" placeholder="Enter password" style="width: 100%; padding: 0.5rem;" />
    </div>

    <div style="margin-bottom: 1rem;">
        <label for="confirmPassword">Confirm Password</label><br />
        <input id="confirmPassword" type="password" @bind="_registerRequest.ConfirmPassword" placeholder="Confirm password" style="width: 100%; padding: 0.5rem;" />
    </div>

    <div style="margin-bottom: 1rem;">
        <label for="role">Role</label><br />
        <input id="role" @bind="_registerRequest.Role" placeholder="Enter role (optional)" style="width: 100%; padding: 0.5rem;" />
    </div>

    <div style="margin-bottom: 1rem;">
        <label for="tier">Tier</label><br />
        <input id="tier" type="number" @bind="_registerRequest.Tier" style="width: 100%; padding: 0.5rem;" />
    </div>

    <div style="display: flex; gap: 1rem;">
        <button @onclick="GoToLogin" style="padding: 0.5rem 1rem;">Back</button>
        <button @onclick="RegisterAsync" style="padding: 0.5rem 1rem;">Register</button>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <p style="color: red; margin-top: 1rem;">@_errorMessage</p>
    }
</div>

@code {
    private RegisterRequest _registerRequest = new();
    private string _errorMessage = string.Empty;

    private async Task RegisterAsync()
    {
        if (_registerRequest.Password != _registerRequest.ConfirmPassword)
        {
            _errorMessage = "Passwords do not match.";
            return;
        }

        var response = await UserApiClient.RegisterAsync(_registerRequest);
        
        if (!response.Success)
        {
            _errorMessage = string.Join(", ", response.Error ?? new[] { "Registration failed." });
            return;
        }
        
        var validateAuth = await AuthApiClient.ValidateTokenAsync(response.Data.User.UserId, response.Data.Token, UserOperation.Register);

        if (!validateAuth.Success)
        {
            _errorMessage = string.Join(", ", response.Error ?? new[] { "Token is not valid. Please try again." });
            return;
        }

        await TokenService.SaveTokenAsync(response.Data.Token);
        ((CustomAuthStateProvider)AuthStateProvider).NotifyAuthStateChanged();
        NavManager.NavigateTo("/");
    }

    private void GoToLogin()
    {
        NavManager.NavigateTo("/login");
    }
}
